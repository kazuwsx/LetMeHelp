<h2>ユーザー編集画面</h2>
<% if flash[:success] %>
      <h2><%= flash[:success] %></h2>
<% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :現在のパスワード %> <p>(ユーザー情報を編集するためにあなたの現在のパスワードが必要です。)</p><br/>
    <div class="form-group">
    <%= f.password_field :current_password, class: 'form-control' %>
    </div>
  </div>
  
  <div class="field">
    <%= f.label "画像をアップロード" %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :性別を選んでください %>
    <%= f.label :"男性" %>
    <%= f.radio_button :sex, true %>
    <%= f.label :"女性" %>
    <%= f.radio_button :sex, false %>
  </div>

  <div class="field">
    <%= f.label :位置情報を入力してください。 %><br />
    <%= f.text_field :location_information, class: "w-50" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p>削除しますか？ <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
