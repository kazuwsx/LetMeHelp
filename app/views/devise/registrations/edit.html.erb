<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= form_with method: :patch, url: profile_path do |f| %>
  <%= f.label "画像をアップロード" %>
  <%= f.file_field :image ,placeholder: 'aa'%>
  <%= f.submit %>
<% end %>
<% if flash[:success] %>
      <h2><%= flash[:success] %></h2>
<% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :current_password %> <p>(we need your current password to confirm your changes)</p><br/>
    <div class="form-group">
    <%= f.password_field :current_password, class: 'form-control' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :性別を選んでください %>
    <%= f.label :"男性" %>
    <%= f.radio_button :sex, true %>
    <%= f.label :"女性" %>
    <%= f.radio_button :sex, false %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
