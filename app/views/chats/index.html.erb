<div class="messages">
  <% @chats.reverse_each do |c| %>
    <%= render 'chats/chat', c: c %>
  <% end %>
</div>
<div class="mt-2">
  <button class="btn btn-primary ml-2" id="submit-location-information">
    位置情報を送信する
  </button>
  <%= form_with url: chats_path(request_id: @request.id), method: :post, class: 'comment_submitter float-left mt-1 ml-3' do |f| %>
    <%= f.text_field :comment, placeholder: "コメント", class: :comment_form, size: 100 %>
    <%= f.submit %>
  <% end %>
  
</div>

