<%= form_with model: Request.new ,local: :true  do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "タイトル", class: 'input-sm form-control' %></br>
  </div>
  <div class="form-group">
    <%= f.text_area :detail_information, placeholder: "詳細情報", class: 'input-lg form-control' %></br>
  </div>
  <%= f.submit %>
<% end %>